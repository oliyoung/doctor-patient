<%= simple_form_for appointment do |form| %>
    <%= form.input :doctor_profile_id, collection: DoctorProfile.all.map{|doctor| ["Dr #{doctor.last_name}", doctor.id]} %>
    <%= form.input :appointment_at %>
    <%= form.input :purpose, collection: Appointment.purposes.keys.map{|key| [t(".#{key}"), key]} %>
    <%= form.input :clinic, collection: Appointment.clinics.keys.map{|key| [t(".#{key}"), key]} %>
    <%= form.submit t(".submit") %>
<% end %>